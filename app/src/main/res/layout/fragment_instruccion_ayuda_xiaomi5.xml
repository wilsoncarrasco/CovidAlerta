<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.fernando.covidrastreo.fragmentsXiaomi.InstruccionAyudaFragmentXiaomi5"
    android:background="#D506487C">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PASO 6"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="50dp" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="400dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:src="@drawable/tutorial_registrar_bt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="@string/texto_instruccion_4"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="20sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnFinInstruccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/btn_redondeado_color"
            android:text="SALIR"
            android:textColor="#fff"
            android:foreground="?selectableItemBackgroundBorderless"/>

    </RelativeLayout>

</FrameLayout>